<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.candidosg.portfolio.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="My Apps"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/MyCustomBtnStyle"
        android:text="Popular Movies"
        android:id="@+id/button"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView"/>

    <Button
        style="@style/MyCustomBtnStyle"
        android:text="Stock Hawk"
        android:id="@+id/button2"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/button"/>

    <Button
        style="@style/MyCustomBtnStyle"
        android:text="Build it Bigger"
        android:id="@+id/button3"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/button2" />

    <Button
        style="@style/MyCustomBtnStyle"
        android:text="Make Your App Material"
        android:id="@+id/button4"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/button3" />

    <Button
        style="@style/MyCustomBtnStyle"
        android:text="Go Ubiquitous"
        android:id="@+id/button5"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/button4" />

    <Button
        style="@style/MyCustomBtnStyle"
        android:text="Capstone"
        android:id="@+id/button6"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/button5"/>

</RelativeLayout>
